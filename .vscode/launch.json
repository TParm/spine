{
    "version": "0.2.0",
    "configurations": [
        {
            // meta
            "name": "Launch Server",
            "type": "pwa-node",
            "request": "launch",
            // extra options
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnFirstSessionStart",
            "smartStep": true,
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            // program
            "program": "${workspaceFolder}/src/server.ts",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}